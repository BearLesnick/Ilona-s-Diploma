<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-dark bg-primary">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Cyber SAS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav">
                <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home",new{}, new { @class = "nav-link text-white" })</li>
                <li class="nav-item">@Html.ActionLink("Components", "Components", "Home", new { }, new { @class = "nav-link text-white" })</li>
            </ul>
            @Html.Partial("_LoginPartial")

        </div>
    </div>
    <div class="container body-content text-center">
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customscripts")
    @RenderSection("scripts", required: false)
</body>
</html>
